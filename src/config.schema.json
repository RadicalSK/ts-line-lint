{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "modification-options": {
      "type": "string",
      "enum": [
        "before",
        "after",
        "both",
        "none"
      ]
    },
    "search-patterns": {
      "type": "object",
      "properties": {
        "individual-import": {
          "$ref": "#/definitions/modification-options"
        },
        "consecutive-imports": {
          "$ref": "#/definitions/modification-options"
        },
        "individual-multiline-type-alias": {
          "$ref": "#/definitions/modification-options"
        },
        "consecutive-uniline-type-aliases": {
          "$ref": "#/definitions/modification-options"
        },
        "interface-declaration": {
          "$ref": "#/definitions/modification-options"
        },
        "variable-declaration": {
          "$ref": "#/definitions/modification-options"
        },
        "block-content": {
          "$ref": "#/definitions/modification-options"
        },
        "function-declaration": {
          "$ref": "#/definitions/modification-options"
        },
        "class-declaration": {
          "$ref": "#/definitions/modification-options"
        },
        "class-property-declaration": {
          "$ref": "#/definitions/modification-options"
        },
        "method-or-accessor-declaration": {
          "$ref": "#/definitions/modification-options"
        },
        "abstract-method-or-accessor": {
          "$ref": "#/definitions/modification-options"
        },
        "property-with-effect-decorator": {
          "$ref": "#/definitions/modification-options"
        },
        "unit-test-describe": {
          "$ref": "#/definitions/modification-options"
        },
        "unit-test-block-within-describe": {
          "$ref": "#/definitions/modification-options"
        }
      },
      "additionalProperties": false
    }
  },
  "properties": {
    "indent": {
      "anyOf": [
        {
          "type": "integer",
          "minimum": 1
        },
        {
          "type": "string",
          "enum": [
            "tab"
          ]
        }
      ]
    },
    "remove-blank-lines": {
      "$ref": "#/definitions/search-patterns"
    },
    "insert-blank-lines": {
      "$ref": "#/definitions/search-patterns"
    }
  },
  "required": [
    "indent"
  ],
  "additionalProperties": false
}
