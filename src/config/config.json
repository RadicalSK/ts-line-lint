{
    "indent": "tab",
    "rules": {
        "individual-import": {
            "remove": "before"
        },
        "consecutive-imports": {
            "insert": "after"
        },
        "individual-multiline-type-alias": {
            "insert": "both"
        },
        "consecutive-uniline-type-aliases": {
            "insert": "both"
        },
        "interface-declaration": {
            "insert": "both"
        },
        "variable-declaration": {
            "remove": "before",
        },
        "block-content": {
            "remove": "both",
        },
        "function-declaration": {
            "insert": "both"
        },
        "class-declaration": {
            "insert": "both"
        },
        "class-property-declaration": {
            "remove": "before",
        },
        "method-or-accessor-declaration": {
            "insert": "both"
        },
        "abstract-method-or-accessor": {
            "insert": "both"
        },
        "property-with-effect-decorator": {
            "insert": "both"
        },
        "unit-test-describe": {
            "insert": "both"
        },
        "unit-test-block-within-describe": {
            "insert": "both"
        }
    }
}
