{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "indent": {
            "anyOf": [
                {
                    "type": "integer",
                    "minimum": 1
                },
                {
                    "type": "string",
                    "enum": [
                        "tab"
                    ]
                }
            ]
        },
        "rules": {
            "type": "object",
            "properties": {
                "block-padding": {
                    "$ref": "#/definitions/rule_options"
                },
                "individual-import": {
                    "$ref": "#/definitions/rule_options"
                },
                "consecutive-imports": {
                    "$ref": "#/definitions/rule_options"
                },
                "individual-multiline-type-alias": {
                    "$ref": "#/definitions/rule_options"
                },
                "consecutive-single-line-type-aliases": {
                    "$ref": "#/definitions/rule_options"
                },
                "interface-declaration": {
                    "$ref": "#/definitions/rule_options"
                },
                "single-line-variable-declaration": {
                    "$ref": "#/definitions/rule_options"
                },
                "multiline-variable-declaration": {
                    "$ref": "#/definitions/rule_options"
                },
                "function-declaration": {
                    "$ref": "#/definitions/rule_options"
                },
                "class-declaration": {
                    "$ref": "#/definitions/rule_options"
                },
                "class-property-declaration": {
                    "$ref": "#/definitions/rule_options"
                },
                "class-method-or-accessor-declaration": {
                    "$ref": "#/definitions/rule_options"
                },
                "abstract-method-or-accessor": {
                    "$ref": "#/definitions/rule_options"
                },
                "property-with-effect-decorator": {
                    "$ref": "#/definitions/rule_options"
                },
                "unit-test-describe-block": {
                    "$ref": "#/definitions/rule_options"
                },
                "unit-test-single-line-hook-statement": {
                    "$ref": "#/definitions/rule_options"
                },
                "unit-test-hook-statement-block": {
                    "$ref": "#/definitions/rule_options"
                },
                "unit-test-it-statement": {
                    "$ref": "#/definitions/rule_options"
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "indent", "rules"
    ],
    "additionalProperties": false,
    "definitions": {
        "modification_options": {
            "type": "string",
            "enum": [
                "before",
                "after",
                "both",
                "none"
            ]
        },
        "rule_options": {
            "type": "object",
            "properties": {
                "remove": {
                    "$ref": "#/definitions/modification_options"
                },
                "insert": {
                    "$ref": "#/definitions/modification_options"
                }
            },
            "additionalProperties": false
        }
    }
}
