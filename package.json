{
    "name": "ts-line-lint",
    "version": "1.4.0",
    "description": "enforce consistent use of blank lines in TypeScript files",
    "keywords": [
        "lint",
        "typescript",
        "blank",
        "line"
    ],
    "main": "build/index.js",
    "bin": {
        "ts-line-lint": "./build/index.js"
    },
    "scripts": {
        "build": "rm -rf ./build/ && rm -rf ./tsDist/ && tsc && babel tsDist --out-dir build --ignore '**/*.spec.js'",
        "prepublishOnly": "npm run build",
        "release": "np",
        "start": "node build/index.js",
        "test": "mocha -r ts-node/register src/**/*.spec.ts",
        "lint": "tslint -p tsconfig.json -c ./tslint.json './**/*.ts' -e './**/node_modules/**' -e './**/dist/**'",
        "lint:fix": "tslint -p tsconfig.json -c ./tslint.json './**/*.ts' -e './**/node_modules/**' -e './**/dist/**' --fix"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/RadovanBednar/ts-line-lint"
    },
    "babel": {
        "presets": [
            "latest"
        ]
    },
    "author": "Radovan Bedn√°r",
    "license": "ISC",
    "devDependencies": {
        "@types/chai": "^4.1.6",
        "@types/mocha": "^5.2.5",
        "@types/mock-fs": "^3.6.30",
        "@types/node": "^10.12.0",
        "babel-cli": "^6.26.0",
        "babel-preset-latest": "^6.24.1",
        "chai": "^4.1.2",
        "mocha": "^5.2.0",
        "mock-fs": "^4.7.0",
        "np": "^3.0.4",
        "ts-node": "^7.0.1",
        "tslint": "^5.11.0",
        "tslint-no-unused-expression-chai": "^0.1.4",
        "typescript": "^3.1.3"
    },
    "dependencies": {
        "jsonschema": "^1.2.4"
    }
}
